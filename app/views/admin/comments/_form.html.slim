= form_for([:admin, @comment]) do |f|
  - if @comment.errors.any?
    div id="error_explanation"
      h2 = pluralize(@comment.errors.count, "error")
      br = t('.prohibit')

      ul
      - @comment.errors.full_messages.each do |msg|
        li = msg

  div class="form-group"
    = f.label :author
    br
    = f.text_field :author, class: 'form-input'
  div class="form-group"
    = f.label :body
    br
    = f.text_area :body, class: 'form-input'
  div class="form-group"
    = f.label :email
    br
    = f.text_area :email, class: 'form-input'
  div class="form-group"
    = link_to 'Back', admin_comments_path, class: 'button-secondary'
    |
    = f.submit(class: 'button')