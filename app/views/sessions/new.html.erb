<h1 class="loud">Sign in</h1>

<%= form_for :session, 
        url: session_path, 
        method: :post,
        html: { class:'script-session-form' }  do |f| %>
    <br/>
  <div class="script-field form-group">
    <%= f.text_field :name,
          placeholder: 'Your shop name',
          class:'script-input-name form-control' %>
    <br/>
  </div>
  <div class="script-field form-group">
    <%= f.text_field :email,
          placeholder: 'Email address',
          class:'script-input-email form-control' %>
    <br/>
  </div>
  <div class="script-field form-group">
    <%= f.password_field :password,
          placeholder: 'Password',
          class:'script-input-password form-control' %>
    <br/>
  </div>
  <div class='form-group'>
    <%= f.submit 'Sign in', class: 'signin-button form-control welcome-button' %>
  </div>
<% end %>