<header>
  <div class="container">
  	<div class="row">
      <div class="col-md-9">
      	<ul class="nav navbar-nav">
        	<li><%= link_to t('.all'), theme_store_path(set_sorting_params('price', "")) %></li>
        	<li><%= link_to t('.free'), theme_store_path(set_sorting_params('price', "free")) %></li>
        	<li><%= link_to t('.premium'), theme_store_path(set_sorting_params("price", "premium")) %></li>
        	<li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= t('.all_industries') %><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to t('.all_industries'), theme_store_path(set_sorting_params('industry', '')) %></li>
              <% ThemeStyle::IndustryCategories::INDUSTRIES_LIST.each do |industry| %>
                <li><%= link_to industry, theme_store_path(set_sorting_params('industry', industry)) %></li>
              <% end %>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= t('.sort_by') %><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to t('.randomly'), theme_store_path(set_sorting_params('order', "random()")) %></li>
              <li><%= link_to t('.recent'), theme_store_path(set_sorting_params('order', "created_at DESC")) %></li>
              <li><%= link_to t('.price_low_to_high'), theme_store_path(set_sorting_params('order', "price")) %></li>
              <li><%= link_to t('.price_high_to_low'), theme_store_path(set_sorting_params('order', "price DESC")) %></li>
              <li><%= link_to t('.popular'), theme_store_path(set_sorting_params('order', "rating DESC")) %></li>
            </ul>
          </li>
    		</ul>
  		</div>
  		<div class="col-md-3">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="<%= t('.search_by') %>">
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
          </div>
        </div>
  		</div>
  	</div>
  </div>
  <hr>
</header>