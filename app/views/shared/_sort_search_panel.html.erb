<header>
  <div class="container">
  	<div class="row">
      <div class="col-md-9">
      	<ul class="nav navbar-nav">
        	<li><%= link_to t('.all'), root_path(sort_by('price', "")) %></li>
        	<li><%= link_to t('.free'), root_path(sort_by('price', "free")) %></li>
        	<li><%= link_to t('.premium'), root_path(sort_by("price", "premium")) %></li>
        	<li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= t('.all_industrues') %><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to t('.all_industrues'), root_path(sort_by('industry', '')) %></li>
              <% ThemeStyle::IndustryCategories::INDUSTRIES_LIST.each do |industry| %>
                <li><%= link_to industry, root_path(sort_by('industry', industry)) %></li>
              <% end %>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= t('.sort_by') %><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to t('.randomly'), root_path(sort_by('order', "random()")) %></li>
              <li><%= link_to t('.recent'), root_path(sort_by('order', "created_at DESC")) %></li>
              <li><%= link_to t('.price_low_to_high'), root_path(sort_by('order', "price")) %></li>
              <li><%= link_to t('.price_high_to_low'), root_path(sort_by('order', "price DESC")) %></li>
              <li><a href="#"><%= t('.popular') %></a></li>
            </ul>
          </li>
    		</ul>
  		</div>
  		<div class="col-md-3">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="<%= t('.search_by') %>">
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
          </div>
        </div>
  		</div>
  	</div>
  </div>
  <hr>
</header>