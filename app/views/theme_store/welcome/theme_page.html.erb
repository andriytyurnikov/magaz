    <div class="col-md-3 col-md-offset-1">
      <img src="https://s3.amazonaws.com/shopify-theme-store/screenshots/955/main/optimized_large.jpg" class="img-thumbnail" alt="Image">
      <p><%= @styles[0].name if @styles[0]%></p>
    </div>
    <div class="col-md-3">
      <img src="https://s3.amazonaws.com/shopify-theme-store/screenshots/988/main/optimized_large.jpg" class="img-thumbnail" alt="Image">
      <p><%= @styles[1].name if @styles[1]%></p>  
    </div>
  </div>
  <div class="row">
    <div class="col-md-5 col-md-offset-1">
      <h3><%= t('.store_using_theme') %></h3>
    </div>  
  </div>
  <div class="row">
    <div class="col-md-2 col-md-offset-1">
      <img src="https://s3.amazonaws.com/shopify-theme-store/screenshots/225/theme_example/original.png" class="img-thumbnail" alt="Image">
    </div>
    <div class="col-md-2">
      <img src="https://s3.amazonaws.com/shopify-theme-store/screenshots/240/theme_example/original.png" class="img-thumbnail" alt="Image"> 
