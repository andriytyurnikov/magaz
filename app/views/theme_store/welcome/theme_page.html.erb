      <a href="#"><%= t('.buy_theme') %></a>
      <%= link_to t('.view_demo'), theme_store_demo_path %>
      <hr>
      <h4><%= t('.who_supports') %></h4>
      <p><%= t('.support_info') %></p>
      <a href="#"><%= t('.support') %></a>
      <a href="#"><%= t('.documentation') %></a>
      <a href="#"><%= t('.terms_of_service') %></a>
    </div>
    <div class="col-md-6">
      <img src="https://s3.amazonaws.com/shopify-theme-store/screenshots/911/main/original.jpg" class="img-thumbnail" alt="Image">
    </div>
  </div>
  <div class="row">
    <div class="col-md-5 col-md-offset-1">
      <h3><%= t('.includes_styles') %></h3>
    </div>  
