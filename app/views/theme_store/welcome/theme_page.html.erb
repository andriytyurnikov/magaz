<%= render 'shared/sort_search_header' %>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <h1><%= @theme.name if @theme%></h1>
      <h4><%= t('.free_price') %></h4>
      <p><%= t('.info') %></p>
