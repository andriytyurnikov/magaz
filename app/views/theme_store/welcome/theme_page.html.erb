  <hr>
  <div class="row">
    <div class="col-md-5 col-md-offset-1">
      <h4><%= t('.more_themes') %><%= link_to t('.author'), theme_store_authors_themes_path %></h4>
    </div>  
  </div>
  <div class="row">
    <div class="col-md-3 col-md-offset-1">
      <img src="https://s3.amazonaws.com/shopify-theme-store/screenshots/955/main/optimized_large.jpg" class="img-thumbnail" alt="Image">
      <span><%= @authors_themes[0].name if @authors_themes[0]%></span>
      <span class="pull-right"><%= t('.free_price') %></span>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 col-md-offset-5">
      <button class="btn btn-success"><%= t('.button_more_themes') %></button>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-5 col-md-offset-1">
      <h4>
        <%= t('.more') %>
        <%= link_to t('.templates'), theme_store_template_page_path %>
      </h4>
    </div>  
  </div>

  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <div class="col-md-4">
          <img src="https://s3.amazonaws.com/shopify-theme-store/screenshots/900/main/optimized_large.jpg" class="img-thumbnail" alt="Image">
