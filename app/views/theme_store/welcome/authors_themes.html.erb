<div class="container">
  <div class="row text-center">
    <h1><%= t('.heading') %></h1>
    <div class="col-md-2 col-md-offset-5"><hr/></div>
    <div class="col-md-4 col-md-offset-4 text">
      <h4><%= link_to t('.go_to_website'), @author.website_url%></h4>
    </div>
  </div>
  <div class="row">
    <% @authors_themes.each do |theme| %>
    <div class="col-md-4">
      <img src="https://s3.amazonaws.com/shopify-theme-store/screenshots/1034/main/optimized_large.jpg" class="img-thumbnail" alt="Image">
      <span><%= link_to theme.name, theme_store_theme_page_path(theme)%></span>
      <span class="pull-right"><%= theme.price %></span>
    </div>
    <% end %>
  </div>

<nav class="col-md-4 col-md-offset-5">
  <ul class="pagination">
    <li>
      <a href="#" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    <li><a href="#">1</a></li>
    <li><a href="#">2</a></li>
    <li>
      <a href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>

  <div class="row">
    <div class="col-md-2 col-md-offset-5">
      <button class="btn btn-success"><%= t('.button') %></button>
    </div>
  </div>
</div>