<div class="navbar navbar">
  <%= link_to "Magaz", root_path, class: 'navbar-brand' %>
  
  <%= link_to 'Sign in', new_session_path, class: 'btn btn-default navbar-btn pull-right' %>
</div>
<br/>

<div class="jumbotron">
  <h1 class="loud text-center">Welcome to Magaz</h1>
  <p class="lead text-center">Everything you need to start selling online &mdash; today</p>
</div>
<br/>

<div class="row">
<%= form_for @shop,
      url: registration_path,
      data:{validation_url:validate_registration_path},
      html:{class:'script-registration-form'}  do |f| %>
  <div class="script-field form-group col-lg-3">
    <%= f.text_field :name,
          placeholder: 'Your shop name',
          data: form_error_data(@shop, 'name'),
          class:'script-input-name welcome-input' %>
    <div class="script-error-label alert alert-danger hidden"></div>
    <br/>
  </div>
  <div class="script-field form-group col-lg-3">
    <%= f.text_field :email,
          placeholder: 'Email address',
          data: form_error_data(@shop, 'email'),
          class:'script-input-email welcome-input' %>
    <div class="script-error-label alert alert-danger hidden"></div>
    <br/>
  </div>
  <div class="script-field form-group col-lg-2">
    <%= f.password_field :password,
          placeholder: 'Password',
          data: form_error_data(@shop, 'password'),
          class:'script-input-password welcome-input' %>
    <div class="script-error-label alert alert-danger hidden"></div>
    <br/>
  </div>
  <div class="form-group col-lg-4">
    <%= f.submit 'Create your shop now', class: 'welcome-button' %>
  </div>
<% end %>
</div>